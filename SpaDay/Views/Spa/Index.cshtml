<form method='post' action="/spa">

    Name:
    <br>
    <input type='text' name='name'>    
    <br>

    Skin type:
    <br>    
    <select name='skintype'>
        <option value='oily'>Oily</option>    
        <option value='combination'>Combination</option>    
        <option value='normal'>Normal</option>    
        <option value='dry'>Dry</option>    
    </select>
    <br>

    Manicure or Pedicure?
    <br>
    <input type="checkbox" id="Manicure" name="Manicure" data-val="true" and value="true"/>
    <label for="Manicure">Manicure</label>
    <input type="checkbox" id="Pedicure" name="Pedicure" data-val="true" and value="true"/>
    <label for="Pedicure">Pedicure</label>
