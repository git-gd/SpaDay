@section css {
    <link rel="stylesheet" href="~/css/spa.css" />
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Paytone+One&display=swap" rel="stylesheet">
}

<h1>Fancy Spa</h1>
<div id="clientProfile">
    <h3>Client profile</h3>
    <p>Welcome, @ViewBag.name!</p>
</div>
<div id="servicesMenu">
    <h5>Facial Treatments</h5>
    <p>Your @ViewBag.skintype skin type is best suited to the following facial types:</p>
    <ul>
        @foreach (string facial in ViewBag.appropriateFacials)
        {
            <li>@facial</li>
        }
    </ul>
    <h5>Nail Services</h5>
    @if (ViewBag.manicure == "true")
    {<p>Our manicure is a great way to spend 30 minutes of your day! We use shea butter hand cream and the finest gel polish.</p>}
    @if (ViewBag.pedicure == "true")
    {<p>Relax for 45 minutes in pure luxury! Our massage chairs and experienced nail techs are here to get your feet in shape for sandal season!</p>}
    @if (ViewBag.manicure == null && ViewBag.pedicure == null)
    {<p>Consider one of our fabulous nail services on your next Fancy Spa visit!</p>}
    <h5>Today's Color Options</h5>
    <table>
        <tr>
            @{
                Random r = new Random();
                for (int i = 0; i < 10; i++)
                {
                    System.Drawing.Color color;
                    @* 
                        Random.Next(GREATER THAN OR EQUAL TO minValue, LESS THAN maxValue)

                        Color.FromArgb lets us create a color value from random Integer RGB values
                    *@
                    color = System.Drawing.Color.FromArgb(r.Next(0, 256), r.Next(0, 256), r.Next(0, 256));
                    @* ColorTranlator.ToHtml does the translation for us *@
                    <td><div class="square" style="background-color: @System.Drawing.ColorTranslator.ToHtml(color)"></div></td>
                }
            }
        </tr>
    </table>
</div>